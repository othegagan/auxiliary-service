{
    "name": "wordle-backend",
    "version": "1.2.0",
    "description": "TypeScript Rest API with Express.js, JWT, MongoDB",
    "type": "module",
    "main": "index.ts",
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon",
        "qa": " cross-env NODE_ENV=qa nodemon",
        "prod": " cross-env NODE_ENV=production nodemon",
        "ts-check": "tsc --project tsconfig.json",
        "add-build": "git add dist",
        "lint": "biome check . --write --unsafe",
        "prepare": "husky",
        "build": "npm run swagger-autogen && rimraf dist && tsc --noEmit false && tsc-alias",
        "start": "node dist/index.js",
        "serve-dev": " cross-env NODE_ENV=development tsx -r tsconfig-paths/register src/index.ts",
        "serve-qa": " cross-env NODE_ENV=qa tsx -r tsconfig-paths/register src/index.ts",
        "serve-prod": " cross-env NODE_ENV=production tsx -r tsconfig-paths/register src/index.ts",
        "swagger-autogen": "tsx -r tsconfig-paths/register src/configs/swagger.ts",
        "swagger-watch": "nodemon --watch src --ext ts --exec \"npm run swagger-autogen\""
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@internationalized/date": "^3.5.5",
        "@twilio/conversations": "^2.6.0",
        "axios": "^1.7.7",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "firebase-admin": "^12.5.0",
        "gps2zip": "^2.2.0",
        "moment-timezone": "^0.5.45",
        "morgan": "^1.10.0",
        "node-schedule": "^2.1.1",
        "path": "^0.12.7",
        "puppeteer": "^23.4.0",
        "stripe": "^16.12.0",
        "swagger-autogen": "^2.23.7",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "ts-node-dev": "^2.0.0",
        "twilio": "^5.3.1",
        "tz-lookup": "^6.1.25",
        "winston": "^3.14.2",
        "winston-daily-rotate-file": "^5.0.0",
        "zipcode-to-timezone": "^0.0.9",
        "zipcodes-nearby": "^0.1.4",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.2",
        "@types/cookie-parser": "^1.4.7",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.5.5",
        "@types/node-schedule": "^2.1.7",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/tz-lookup": "^6.1.2",
        "@types/zipcode-to-timezone": "^0.0.2",
        "cookie-parser": "^1.4.6",
        "cross-env": "^7.0.3",
        "husky": "^9.1.6",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.6",
        "pre-commit": "^1.2.2",
        "rimraf": "^6.0.1",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.19.1",
        "typescript": "^5.6.2"
    },
    "lint-staged": {
        "*.{js,json,ts}": ["biome check --write --unsafe"]
    }
}
