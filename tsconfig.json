{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "outDir": "dist",
        "strict": false,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": false,
        "noImplicitAny": false,
        "types": ["node", "express"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts", "api/**/*.ts"],
    "exclude": ["node_modules"]
}
